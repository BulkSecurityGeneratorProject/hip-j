<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Courier_country_serviceability.
    -->
    <changeSet id="20150618105335" author="jhipster">
        <createTable tableName="COURIER_COUNTRY_SERVICEABILITY">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="is_enabled" type="bit"/>
            <column name="shipment_capacity" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="courier_id" type="bigint"/>
            <column name="payment_service_mapper_id" type="bigint"/>
            <column name="country_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="courier_id"
                                 baseTableName="COURIER_COUNTRY_SERVICEABILITY"
                                 constraintName="fk_courier_country_serviceability_courier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="COURIER"/>

        <addForeignKeyConstraint baseColumnNames="payment_service_mapper_id"
                                 baseTableName="COURIER_COUNTRY_SERVICEABILITY"
                                 constraintName="fk_courier_country_serviceability_payment_service_mapper_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PAYMENT_SERVICE_MAPPER"/>

        <addForeignKeyConstraint baseColumnNames="country_id"
                                 baseTableName="COURIER_COUNTRY_SERVICEABILITY"
                                 constraintName="fk_courier_country_serviceability_country_id"
                                 referencedColumnNames="id"
                                 referencedTableName="COUNTRY"/>

    </changeSet>
</databaseChangeLog>
