<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Fc_serviceability.
    -->
    <changeSet id="20150618104629" author="jhipster">
        <createTable tableName="FC_SERVICEABILITY">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="is_enabled" type="bit"/>
            <column name="shipment_cutoff_time" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="fc_id_id" type="bigint"/>
            <column name="st_pt_id_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="fc_id_id"
                                 baseTableName="FC_SERVICEABILITY"
                                 constraintName="fk_fc_serviceability_fc_id_id"
                                 referencedColumnNames="id"
                                 referencedTableName="FULFILLMENT_CENTER"/>

        <addForeignKeyConstraint baseColumnNames="st_pt_id_id"
                                 baseTableName="FC_SERVICEABILITY"
                                 constraintName="fk_fc_serviceability_st_pt_id_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PAYMENT_SERVICE_MAPPER"/>

    </changeSet>
</databaseChangeLog>
