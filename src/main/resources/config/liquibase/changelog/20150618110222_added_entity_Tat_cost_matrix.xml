<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Tat_cost_matrix.
    -->
    <changeSet id="20150618110222" author="jhipster">
        <createTable tableName="TAT_COST_MATRIX">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="basic_cost" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="fixed_addon_cost" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="variable_addon_percent" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="tat" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="source_city_id" type="bigint"/>
            <column name="destination_city_id" type="bigint"/>
            <column name="courier_id" type="bigint"/>
            <column name="payment_service_mapper_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="source_city_id"
                                 baseTableName="TAT_COST_MATRIX"
                                 constraintName="fk_tat_cost_matrix_source_city_id"
                                 referencedColumnNames="id"
                                 referencedTableName="CITY"/>

        <addForeignKeyConstraint baseColumnNames="destination_city_id"
                                 baseTableName="TAT_COST_MATRIX"
                                 constraintName="fk_tat_cost_matrix_destination_city_id"
                                 referencedColumnNames="id"
                                 referencedTableName="CITY"/>

        <addForeignKeyConstraint baseColumnNames="courier_id"
                                 baseTableName="TAT_COST_MATRIX"
                                 constraintName="fk_tat_cost_matrix_courier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="COURIER"/>

        <addForeignKeyConstraint baseColumnNames="payment_service_mapper_id"
                                 baseTableName="TAT_COST_MATRIX"
                                 constraintName="fk_tat_cost_matrix_payment_service_mapper_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PAYMENT_SERVICE_MAPPER"/>

    </changeSet>
</databaseChangeLog>
