<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Shipment_transactions.
    -->
    <changeSet id="20150618111927" author="jhipster">
        <createTable tableName="SHIPMENT_TRANSACTIONS">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_ref" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="invoice_id" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="shipment_id" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="amount" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="awb" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
            <column name="time" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="lbh" type="varchar(255)"/>
            <column name="in_scan_time" type="timestamp"/>
            <column name="description" type="varchar(255)"/>
            <column name="cost" type="decimal(10,2)"/>
            <column name="fulfillment_center_id" type="bigint"/>
            <column name="dest_pincode_id" type="bigint"/>
            <column name="courier_id" type="bigint"/>
            <column name="payment_service_mapper_id" type="bigint"/>
            <column name="master_bag_id" type="bigint"/>
        </createTable>
        <dropDefaultValue tableName="SHIPMENT_TRANSACTIONS" columnName="time" columnDataType="datetime"/>

        <dropDefaultValue tableName="SHIPMENT_TRANSACTIONS" columnName="in_scan_time" columnDataType="datetime"/>

        
        <addForeignKeyConstraint baseColumnNames="fulfillment_center_id"
                                 baseTableName="SHIPMENT_TRANSACTIONS"
                                 constraintName="fk_shipment_transactions_fulfillment_center_id"
                                 referencedColumnNames="id"
                                 referencedTableName="FULFILLMENT_CENTER"/>

        <addForeignKeyConstraint baseColumnNames="dest_pincode_id"
                                 baseTableName="SHIPMENT_TRANSACTIONS"
                                 constraintName="fk_shipment_transactions_dest_pincode_id"
                                 referencedColumnNames="id"
                                 referencedTableName="DEST_PINCODE"/>

        <addForeignKeyConstraint baseColumnNames="courier_id"
                                 baseTableName="SHIPMENT_TRANSACTIONS"
                                 constraintName="fk_shipment_transactions_courier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="COURIER"/>

        <addForeignKeyConstraint baseColumnNames="payment_service_mapper_id"
                                 baseTableName="SHIPMENT_TRANSACTIONS"
                                 constraintName="fk_shipment_transactions_payment_service_mapper_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PAYMENT_SERVICE_MAPPER"/>

        <addForeignKeyConstraint baseColumnNames="master_bag_id"
                                 baseTableName="SHIPMENT_TRANSACTIONS"
                                 constraintName="fk_shipment_transactions_master_bag_id"
                                 referencedColumnNames="id"
                                 referencedTableName="MASTER_BAG"/>

    </changeSet>
</databaseChangeLog>
