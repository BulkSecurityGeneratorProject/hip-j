<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Fulfillment_center.
    -->
    <changeSet id="20150618103312" author="jhipster">
        <createTable tableName="FULFILLMENT_CENTER">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fcid" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="fc_type" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="franchise" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="address1" type="varchar(255)"/>
            <column name="address2" type="varchar(255)"/>
            <column name="address3" type="varchar(255)"/>
            <column name="pincode" type="varchar(6)">
                <constraints nullable="false" />
            </column>
            <column name="o2s_tat" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="is_enabled" type="bit"/>
            <column name="fc_city_id" type="bigint"/>
            <column name="fc_state_id" type="bigint"/>
            <column name="fc_cluster_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="fc_city_id"
                                 baseTableName="FULFILLMENT_CENTER"
                                 constraintName="fk_fulfillment_center_fc_city_id"
                                 referencedColumnNames="id"
                                 referencedTableName="CITY"/>

        <addForeignKeyConstraint baseColumnNames="fc_state_id"
                                 baseTableName="FULFILLMENT_CENTER"
                                 constraintName="fk_fulfillment_center_fc_state_id"
                                 referencedColumnNames="id"
                                 referencedTableName="STATE"/>

        <addForeignKeyConstraint baseColumnNames="fc_cluster_id"
                                 baseTableName="FULFILLMENT_CENTER"
                                 constraintName="fk_fulfillment_center_fc_cluster_id"
                                 referencedColumnNames="id"
                                 referencedTableName="CLUSTER"/>

    </changeSet>
</databaseChangeLog>
