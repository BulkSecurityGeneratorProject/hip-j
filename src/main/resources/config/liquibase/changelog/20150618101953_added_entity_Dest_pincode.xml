<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Dest_pincode.
    -->
    <changeSet id="20150618101953" author="jhipster">
        <createTable tableName="DEST_PINCODE">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="pincode" type="varchar(6)">
                <constraints nullable="false" />
            </column>
            <column name="district" type="varchar(255)"/>
            <column name="pincode_city_id" type="bigint"/>
            <column name="pincode_state_id" type="bigint"/>
            <column name="pincode_region_id" type="bigint"/>
            <column name="pincode_country_id" type="bigint"/>
            <column name="pincode_cluster_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="pincode_city_id"
                                 baseTableName="DEST_PINCODE"
                                 constraintName="fk_dest_pincode_pincode_city_id"
                                 referencedColumnNames="id"
                                 referencedTableName="CITY"/>

        <addForeignKeyConstraint baseColumnNames="pincode_state_id"
                                 baseTableName="DEST_PINCODE"
                                 constraintName="fk_dest_pincode_pincode_state_id"
                                 referencedColumnNames="id"
                                 referencedTableName="STATE"/>

        <addForeignKeyConstraint baseColumnNames="pincode_region_id"
                                 baseTableName="DEST_PINCODE"
                                 constraintName="fk_dest_pincode_pincode_region_id"
                                 referencedColumnNames="id"
                                 referencedTableName="REGION"/>

        <addForeignKeyConstraint baseColumnNames="pincode_country_id"
                                 baseTableName="DEST_PINCODE"
                                 constraintName="fk_dest_pincode_pincode_country_id"
                                 referencedColumnNames="id"
                                 referencedTableName="COUNTRY"/>

        <addForeignKeyConstraint baseColumnNames="pincode_cluster_id"
                                 baseTableName="DEST_PINCODE"
                                 constraintName="fk_dest_pincode_pincode_cluster_id"
                                 referencedColumnNames="id"
                                 referencedTableName="CLUSTER"/>

    </changeSet>
</databaseChangeLog>
