<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Stock_airwaybill.
    -->
    <changeSet id="20150618110845" author="jhipster">
        <createTable tableName="STOCK_AIRWAYBILL">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="awb" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="courier_id" type="bigint"/>
            <column name="payment_type_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="courier_id"
                                 baseTableName="STOCK_AIRWAYBILL"
                                 constraintName="fk_stock_airwaybill_courier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="COURIER"/>

        <addForeignKeyConstraint baseColumnNames="payment_type_id"
                                 baseTableName="STOCK_AIRWAYBILL"
                                 constraintName="fk_stock_airwaybill_payment_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PAYMENT_TYPE"/>

    </changeSet>
</databaseChangeLog>
